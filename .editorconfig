# http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 160
trim_trailing_whitespace = true

[{*.tf,*.tfvars}]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 160
trim_trailing_whitespace = true

[Makefile]
tab_width = 4
indent_style = tab
